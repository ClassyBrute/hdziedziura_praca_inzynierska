<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemVM"
            type="com.example.f1_app.presentation.viewmodels.home.item_vm.RaceVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/next_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/next_card"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> itemVM.onRaceClick()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/next_inner_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Round "+itemVM.item.round}'
                    tools:text="Round 6"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    app:layout_constraintTop_toTopOf="@id/next_inner_container"
                    app:layout_constraintStart_toStartOf="@id/next_inner_container" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{itemVM.item.country}"
                    tools:text="Spain"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/round"
                    app:layout_constraintStart_toStartOf="@id/round" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dateFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{itemVM.item.dateFrom}"
                    tools:text="20-22 May 2022"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintStart_toStartOf="@id/name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dateTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{itemVM.item.dateTo}"
                    tools:text="20-22 May 2022"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/dateFrom"
                    app:layout_constraintStart_toStartOf="@id/dateFrom" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/next_flag"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    imageUrl="@{itemVM.item.image}"
                    tools:src="@drawable/ic_f1"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/dateTo"
                    app:layout_constraintTop_toTopOf="@id/round"
                    app:layout_constraintEnd_toEndOf="@id/next_inner_container"
                    app:layout_constraintStart_toEndOf="@id/dateTo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>