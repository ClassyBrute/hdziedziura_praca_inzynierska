<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemVM"
            type="com.example.f1_app.presentation.viewmodels.home.item_vm.ConstructorVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> itemVM.onConstructorClick()}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemVM.item.position}"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="1"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/team"
            app:layout_constraintBottom_toBottomOf="@id/drivers"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemVM.item.name}"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Ferrari"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/position"
            app:layout_constraintBottom_toTopOf="@id/drivers"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/drivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{itemVM.item.driver1+" | "+itemVM.item.driver2}'
            android:textSize="16sp"
            android:textColor="@color/grey"
            tools:text="C.Leclerc | C.Sainz"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@id/position"
            app:layout_constraintTop_toBottomOf="@id/team"
            app:layout_constraintBottom_toBottomOf="@id/position"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{itemVM.item.wins+" wins"}'
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="10 wins"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="@id/points"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{itemVM.item.points+" pts"}'
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="150 pts"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>