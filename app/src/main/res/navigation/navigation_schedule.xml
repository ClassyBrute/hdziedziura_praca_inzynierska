<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/scheduleFragment"
    android:id="@+id/navigation_schedule">

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.f1_app.presentation.ui.ScheduleFragment"
        tools:layout="@layout/fragment_schedule">

        <action android:id="@+id/action_scheduleFragment_to_raceDetailsFragment"
            app:destination="@id/navigation_race_details"
            app:popUpTo="@id/scheduleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
</navigation>